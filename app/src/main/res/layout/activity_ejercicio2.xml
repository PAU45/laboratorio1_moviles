<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:gravity="center"
    android:padding="16dp">

    <!-- First Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#000000"
            android:text="7"
            android:textSize="36sp"
            app:cornerRadius="12dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp" />

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#000000"
            android:text="8"
            android:textSize="36sp"
            app:cornerRadius="12dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#000000"
            android:text="9"
            android:textSize="36sp"
            app:cornerRadius="12dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <!-- Second Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#000000"
            android:text="4"
            android:textSize="36sp"
            app:cornerRadius="12dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp" />

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#000000"
            android:text="5"
            android:textSize="36sp"
            app:cornerRadius="12dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#000000"
            android:text="6"
            android:textSize="36sp"
            app:cornerRadius="12dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <!-- Third Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#000000"
            android:text="1"
            android:textSize="36sp"
            app:cornerRadius="12dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp" />

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#000000"
            android:text="2"
            android:textSize="36sp"
            app:cornerRadius="12dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#000000"
            android:text="3"
            android:textSize="36sp"
            app:cornerRadius="12dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <!-- Fourth Row (Center Button) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#000000"
            android:text="I"
            android:textSize="36sp"
            app:cornerRadius="12dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <!-- Fifth Row (Arrows) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#000000"
            android:text="<-"
            android:textSize="36sp"
            app:cornerRadius="12dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp" />

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#000000"
            android:text="I"
            android:textSize="36sp"
            app:cornerRadius="12dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#000000"
            android:text="->"
            android:textSize="36sp"
            app:cornerRadius="12dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp" />
    </LinearLayout>

</LinearLayout>
